# Firebase Authentication 用 API キー
FIREBASE_API_KEY=<YOUR_FIREBASE_API_KEY>

# Google API キー
GOOGLE_API_KEY=<YOUR_GOOGLE_API_KEY>

# sheetPuller で使用する Google スプレッドシートの ID
SHEET_ID=<YOUR_SHEET_ID>
# 取得対象のシート名
SHEET_NAME=Sheet1
# データ取得範囲
SHEET_RANGE=A:G
# スプレッドシートの列とFirestoreフィールドの対応
SHEET_FIELD_MAP={"id":0,"send_date":0,"progress":1,"manager_name":2,"number":3,"facility_name":4,"operator_name":5,"email":6}

# テンプレート取得用スプレッドシートの ID
TEMPLATE_SHEET_ID=<YOUR_TEMPLATE_SHEET_ID>
# テンプレートを置いたシート名
TEMPLATE_SHEET_NAME=Template
# テンプレート取得範囲
TEMPLATE_SHEET_RANGE=A:B
# 件名や本文を取得する列番号の対応
TEMPLATE_FIELD_MAP={"subject1":0,"body1":1}

# Cloud Tasks ID トークンの audience
TASKS_AUDIENCE=<YOUR_TASKS_AUDIENCE>

# Cloud Tasks が利用するサービスアカウント
TASKS_SERVICE_ACCOUNT=<YOUR_TASKS_SERVICE_ACCOUNT>

# Cloud Tasks のキュー名
QUEUE_NAME=<YOUR_QUEUE_NAME>

# Cloud Tasks キューのリージョン
TASKS_REGION=<YOUR_TASKS_REGION>

# sendMail 関数の URL
SEND_MAIL_URL=<YOUR_SEND_MAIL_URL>

# GCP プロジェクト ID（ローカル実行時に使用）
PROJECT_ID=<YOUR_PROJECT_ID>

# デプロイ環境では自動設定される GCP プロジェクト ID
GCP_PROJECT=<YOUR_GCP_PROJECT>

# SMTP サーバ設定
SMTP_HOST=smtp.example.com
SMTP_PORT=465
SMTP_USER=your_username
SMTP_PASS=your_password
SMTP_FROM=your@example.com

# フォローアップ間隔(日)
FOLLOWUP_INTERVAL_DAYS=7
